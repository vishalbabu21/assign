#include <stdio.h>

int main(void) {
    int n;
    printf("Enter number of terms (positive integer): ");
    if (scanf("%d", &n) != 1 || n <= 0) {
        printf("Invalid input â€” please enter a positive integer.\n");
        return 1;
    }

    int a = 0, b = 1;
    printf("Fibonacci series (%d terms):\n", n);
    for (int i = 1; i <= n; i++) {
        printf("%d%s", a, (i < n ? ", " : "\n"));
        int next = a + b;
        a = b;
        b = next;
    }
    return 0;
}
