#include <iostream>
#include <string>
using namespace std;

bool palinRec(const string& s, int l, int r) {
    if (l >= r) return true;
    if (s[l] != s[r]) return false;
    return palinRec(s, l + 1, r - 1);
}

bool isPalindromeRecursive(const string& s) {
    return palinRec(s, 0, (int)s.size() - 1);
}

int main(){
    cout << isPalindromeRecursive("deified") << "\n";
}
